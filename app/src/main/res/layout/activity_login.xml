<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amber_400"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/amiprogress"

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="200dp"
        android:visibility="gone"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"
        app:lottie_rawRes="@raw/cartloding" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.7dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15.7dp"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="444dp"
                    android:background="@drawable/white_cueve_bg" />


                <LinearLayout
                    android:id="@+id/linear_login_by_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingLeft="20.7dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="57.7dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="LOGIN"
                        android:textColor="#030303"
                        android:textSize="31.3sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Email"
                        android:textColor="#c2c2c2"
                        android:textSize="13.3sp" />

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_semibold"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.3dp"
                        android:layout_marginRight="44.3dp"
                        android:background="#d5d5d5" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30.3dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Password"
                        android:textColor="#c2c2c2"
                        android:textSize="13.3sp" />

                    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11.7dp"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingRight="44.3dp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp"
                        app:drawable_hide="@drawable/hide1"
                        app:drawable_show="@drawable/show"
                        app:tint_color="#d5d5d5" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.3dp"
                        android:layout_marginRight="44.3dp"
                        android:background="#d5d5d5" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="17.3dp"
                        android:layout_marginRight="44.3dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Forgot Password?"
                        android:textColor="#d5d5d5"
                        android:textSize="12.3sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_login_by_phone"
                    android:layout_width="match_parent"
                    android:layout_height="345dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="20.7dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="57.7dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="LOGIN"
                        android:textColor="#030303"
                        android:textSize="31.3sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Phone Number"
                        android:textColor="#c2c2c2"
                        android:textSize="13.3sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_semibold"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/grey_cursor_color"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="6.3dp"
                        android:layout_marginRight="44.3dp"
                        android:background="#d5d5d5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:orientation="horizontal"
                    android:paddingLeft="30dp">

                    <ImageView
                        android:id="@+id/login_by_phone"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="50dp"
                        android:contentDescription="Login by phone number"
                        android:src="@drawable/ic_baseline_phone_iphone_24" />

                    <ImageView
                        android:id="@+id/login_by_email"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="50dp"
                        android:contentDescription="Login by email"
                        android:src="@drawable/ic_email"


                        android:visibility="gone" />

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/login"
                            android:layout_width="18.7dp"
                            android:layout_height="15.3dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="50dp"
                            android:src="@drawable/black_arrow" />

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/li"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="183dp"
            android:layout_marginTop="159dp"
            android:layout_marginEnd="180dp"
            android:indeterminate="true"
            android:indeterminateTint="#F0F6F5"
            android:progress="50"
            android:progressBackgroundTintMode="src_over"
            android:progressTintMode="multiply"
            android:visibility="gone">

        </ProgressBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:text="Already have an account?"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal"
                    android:text="Signup"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>